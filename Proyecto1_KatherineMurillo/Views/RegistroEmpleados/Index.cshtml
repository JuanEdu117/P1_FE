@model IEnumerable<Proyecto1_KatherineMurillo.Models.Empleados>

@{
    ViewData["Title"] = "Index";
}



<h1>Listado Registro Empleados</h1>

<p>
    <a asp-action="Create" asp-controller="RegistroEmpleados">Crear Nuevo</a>


<p>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group">
        <label for="buscarCedula" class="mr-2" style="font-size: 1.1em;">Buscar Empleado:</label>
        <input type="text" id="buscarCedula" name="buscarCedula" class="form-control" placeholder="Ingrese el número de cédula" />
    </div>
    <button type="submit" class="btn btn-primary ml-2">Buscar</button>
</form>

<table class="table table-hover">
    <thead class="thead-dark">

        <tr>
            <th>
                Cedula
            </th>
            <th>
                Fecha Nacimiento
            </th>
            <th>
                Lateralidad
            </th>
            <th>
                Fecha Ingreso
            </th>
            <th>
                Salario Hora
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lateralidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarioHora)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Cedula }) |
                @Html.ActionLink("Delete", "Delete", new {  id = item.Cedula })
            </td>
        </tr>
}
    </tbody>
</table>
