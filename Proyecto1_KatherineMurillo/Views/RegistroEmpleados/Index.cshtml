@model IEnumerable<Proyecto1_KatherineMurillo.Models.Empleados>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de empleados</h1>
<hr />
<p>
    <a asp-action="Create">Crear nuevo empleado</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaNacimiento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lateralidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaIngreso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SalarioHora)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaNacimiento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Lateralidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaIngreso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalarioHora)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Cedula }) |
                @Html.ActionLink("Delete", "Delete", new {  id = item.Cedula })
            </td>
        </tr>
}
    </tbody>
</table>
