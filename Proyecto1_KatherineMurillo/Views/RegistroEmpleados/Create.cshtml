@model Proyecto1_KatherineMurillo.Models.Empleados

@{
    ViewData["Title"] = "Create";
}

<h1 style="color:darkcyan">Registros</h1>

<h4 style="color:darkcyan">Crear Nuevo Empleado</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="RegistroEmpleados" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Digite la cédula:</label>
                <input asp-for="Cedula" class="form-control" />
                <span asp-validation-for="Cedula" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label class="control-label">Seleccione la fecha de nacimiento:</label>
                <input asp-for="FechaNacimiento" type="date" class="form-control" />

                <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="Lateralidad" class="control-label"></label>
                <select asp-for="Lateralidad" class="form-control" asp-items="@(new SelectList(new[] { "Diestro", "Zurdo" }))"></select>

                <span asp-validation-for="Lateralidad" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label class="control-label">Seleccione la fecha de ingreso:</label>
                <input asp-for="FechaIngreso" type="date" class="form-control" />

                <span asp-validation-for="FechaIngreso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Digite el salario por hora:</label>
                <input asp-for="SalarioHora" class="form-control" />
                <span asp-validation-for="SalarioHora" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">

                <input type="submit" value="Guardar" class="btn btn-success" />

            </div>
        </form>
    </div>
</div>

<div>

    <a asp-action="Index" asp-controller="RegistroEmpleados">Regresar al listado</a>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
