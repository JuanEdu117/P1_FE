@model Proyecto1_KatherineMurillo.Models.cls_Product

@{
    ViewData["Title"] = "AbrirModificarProduct";
}

<h1>Mantenimiento Product</h1>

<h4>Modifique el Producto:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateProduct" asp-controller="Product" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">ID:</label>
                <input asp-for="iId" readonly="readonly" class="form-control" />
                <span asp-validation-for="iId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Digite el Nombre:</label>
                <input asp-for="sNombre" class="form-control" />
                <span asp-validation-for="sNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Product">Regresar al Listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
