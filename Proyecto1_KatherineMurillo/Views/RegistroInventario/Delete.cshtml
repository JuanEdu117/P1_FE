<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdInventario)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdInventario)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Descripcion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Descripcion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TipoMaquina)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TipoMaquina)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HorasActuales)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HorasActuales)
        </dd>
        <dt class = "col-sm-2">
