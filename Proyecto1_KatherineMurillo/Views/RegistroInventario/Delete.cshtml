        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HorasMaximas)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HorasMantenimiento)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HorasMantenimiento)
        </dd>
