@model IEnumerable<Proyecto1_KatherineMurillo.Models.Inventario>

@{
    ViewData["Title"] = "Index";
}

<h1>Listado Registro Inventario</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <div class="form-group">
        <label for="buscarIdInventario" class="mr-2" style="font-size: 1.1em;">Buscar Inventario:</label>
        <input type="text" id="buscarIdInventario" name="buscarIdInventario" class="form-control" placeholder="Ingrese el Id del inventario" />
    </div>
    <button type="submit" class="btn btn-primary ml-2">Buscar</button>
</form>

<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                ID
            </th>
            <th>
                Descripción
            </th>
            <th>
                Tipo Máquina
            </th>
            <th>
                Horas Actuales
            </th>
            <th>
                Horas Maximas
            </th>
            <th>
                Horas Mantenimiento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="table-secondary">
            <td>
                @Html.DisplayFor(modelItem => item.IdInventario)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TipoMaquina)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorasActuales)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorasMaximas)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HorasMantenimiento)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.IdInventario  }) |
                @Html.ActionLink("Delete", "Delete", new {  id=item.IdInventario })
            </td>
        </tr>
}
    </tbody>
</table>
