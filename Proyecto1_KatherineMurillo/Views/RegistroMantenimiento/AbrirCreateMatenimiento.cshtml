@model Proyecto1_KatherineMurillo.Models.Mantenimiento

@{
    ViewData["Title"] = "AbrirCreateMatenimiento";
}

<!--<h1>AbrirCreateMatenimiento</h1>-->

<h4>Mantenimiento Propiedades</h4>
<hr />
<div class="row container">
    <div class="content-container">
        <form asp-action="AbrirCreateMatenimiento" asp-controller="RegistroMantenimiento" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Digite Id mantenimiento:</label>
                <input asp-for="IdMantenimiento" class="form-control" />
                <span asp-validation-for="IdMantenimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Digite el Id cliente:</label>
                <input asp-for="id_Cliente" class="form-control" />
                <span asp-validation-for="id_Cliente" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Seleccione Fecha Ejecutado:</label>
                <input asp-for="FechaEjecutado" type="date" id="fechaEjecucion" class="form-control" />
                <span asp-validation-for="FechaEjecutado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Seleccione Fecha Agendado:</label>
                <input asp-for="FechaAgendado" type="date" class="form-control" />
                <span asp-validation-for="FechaAgendado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Digite los metros de propiedad:</label>
                <input asp-for="MetrosPropiedad" class="form-control" />
                <span asp-validation-for="MetrosPropiedad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Digite los metros de cerca viva:</label>
                <input asp-for="MetrosCercaViva" class="form-control" />
                <span asp-validation-for="MetrosCercaViva" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cantidad días sin chapia:</label>
                <button onclick="mostrarDiasSinChapia()" class="btn-info fw-bold">calcular días</button>
                <input asp-for="DiasSinChapia" type="text" readonly="readonly" id="resultado" class="form-control" />
                <span asp-validation-for="DiasSinChapia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Seleccione fecha otra chapia:</label>
                <input asp-for="FechaOtraChapia" type="date" class="form-control" />
                <span asp-validation-for="FechaOtraChapia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Seleccione el tipo de zacate:</label>
                <input asp-for="TipoZacate" class="form-control" />
                <span asp-validation-for="TipoZacate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Seleccione aplicación del producto:</label>
                <input asp-for="AplicacionProducto" class="form-control" />
                <span asp-validation-for="AplicacionProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Seleccione el producto aplicado:</label>
                <input asp-for="ProductoAplicado" class="form-control" />
                <span asp-validation-for="ProductoAplicado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Costo de la chapia:</label>
                <input asp-for="CostoChapia" class="form-control" />
                <span asp-validation-for="CostoChapia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Costo aplicación del producto:</label>
                <input asp-for="CostoAplicacionProducto" class="form-control" />
                <span asp-validation-for="CostoAplicacionProducto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Seleccione el estado de mantenimiento:</label>
                <input asp-for="EstadoMantenimiento" class="form-control" />
                <span asp-validation-for="EstadoMantenimiento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="RegistroMantenimiento">Regresar al Listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/mantenimientos.js"></script>
}
