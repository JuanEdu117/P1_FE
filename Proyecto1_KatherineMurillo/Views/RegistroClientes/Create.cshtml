@model Proyecto1_KatherineMurillo.Models.Clientes

@{
    ViewData["Title"] = "Create";
}

<h1 style="color:darkcyan">Registros</h1>

<h4 style="color:darkcyan">Crear Nuevo Cliente</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNuevo" asp-controller="RegistroClientes" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Digite la identificación:</label>
                <input asp-for="Identificacion" class="form-control" />
                <span asp-validation-for="Identificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Digite el nombre completo:</label>
                <input asp-for="NombreCompleto" class="form-control" id="nombreCompleto" required />
                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Seleccione la provincia:</label>
                <select asp-for="Provincia" class="form-control" id="provincia">
                    <option value="San José" selected>San José</option>
                    <option value="Alajuela">Alajuela</option>
                    <option value="Cartago">Cartago</option>
                    <option value="Heredia">Heredia</option>
                    <option value="Guanacaste">Guanacaste</option>
                    <option value="Puntarenas">Puntarenas</option>
                    <option value="Limón">Limón</option>
                </select>
                <span asp-validation-for="Provincia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Seleccione el cantón:</label>
                <select asp-for="Canton" class="form-control" id="canton">
                </select>
                <span asp-validation-for="Canton" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Digite el distrito:</label>
                <input asp-for="Distrito" class="form-control" /> 
                <span asp-validation-for="Distrito" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Digite la dirección exacta:</label>
                <input asp-for="DireccionExacta" class="form-control" id="direccionExacta" required />
                <span asp-validation-for="DireccionExacta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Seleccione el mantenimiento en invierno:</label>
                <select asp-for="MantenimientoInvierno" class="form-control" asp-items="@(new SelectList(new[] { 15, 30 }))"></select>
                <span asp-validation-for="MantenimientoInvierno" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Seleccione el mantenimiento en verano:</label>
                <select asp-for="MantenimientoVerano" class="form-control" asp-items="@(new SelectList(new[] { 15, 30 }))"></select>
                <span asp-validation-for="MantenimientoVerano" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="RegistroClientes">Regresar al listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        

    </script>
}
